<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.flashstart.layoutstart.MainActivity">

    <TableLayout
        android:layout_width="368dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TableRow
            android:id="@+id/row_up"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btn_year_up"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:text="年干"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"/>

            <Button
                android:id="@+id/btn_moon_up"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:text="月干"/>

            <Button
                android:id="@+id/btn_day_up"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:text="日干"/>

            <Button
                android:id="@+id/btn_hour_up"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:text="时干"/>
        </TableRow>


        <TableRow
            android:id="@+id/row_down"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btn_year_down"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:text="年支"/>

            <Button
                android:id="@+id/btn_moon_down"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:text="月支"/>

            <Button
                android:id="@+id/btn_day_down"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:text="日支"/>

            <Button
                android:id="@+id/btn_hour_down"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:text="时支"/>
        </TableRow>
    </TableLayout>


</android.support.constraint.ConstraintLayout>
